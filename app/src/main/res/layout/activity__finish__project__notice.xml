<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentProof.Activity_Finish_Project_Notice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!--타이틀바-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/asdasdasdads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="챌린지가 종료 되었습니다"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="챌린지 참가 인원수"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_total_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00명"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="참가자 전원 총 달성률"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_total_progress_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00%"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="당신의 달성률"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_your_progress_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00%"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="획득한 보상금"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_your_total_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00원"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="획득한 습관 점수"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_your_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00점 (역량)"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="추가 보상금"
                android:textColor="@color/bg_main"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/project_done_your_additional_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:text="00원 or 없음"
                android:textSize="17dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="수고하셨습니다"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/project_done_your_additional_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="'확인'버튼을 눌러 \n보상을 받거나 챌린지를 종료하세요"
                android:textColor="@color/bg_main"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/project_done_go_my_challenge_status"
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main"
                android:gravity="center"
                android:padding="17dp"
                android:text="확 인"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>