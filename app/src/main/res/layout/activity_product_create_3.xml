<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".wake.Produce_create.Activity_Product_Create_3">

    <!--타이틀바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/produce_create_toolbar_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="프로젝트 개설 (3/5)"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- todo: 상단 제목 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo_4"
                    app:civ_border_color="@color/bg_main"
                    app:civ_border_width="0.1dp" />

                <TextView
                    android:id="@+id/produce_create_intro_3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="00님의 챌린지\n(프로젝트 제목)"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <!--상단 제목 영역 끝-->

            <!-- todo: 프로젝트 시작일 선택-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="챌린지 시작일"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/item_edit_text_3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:text="챌린지 시작일은"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/produce_create_page_3_select_start_date"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:gravity="center"
                            android:hint="날짜 선택"
                            android:background="@drawable/item_edit_text_3"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="15dp"
                            android:text="일 입니다."
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!-- 프로젝트 시작일 끝 -->

            <!-- todo: 프로젝트 종료일 선택-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="챌린지 종료일"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/item_edit_text_3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--<Button-->
                            <!--android:id="@+id/produce_create_page_3_select_end_date"-->
                            <!--android:layout_marginLeft="15dp"-->
                            <!--android:textColor="@color/black"-->
                            <!--android:background="@drawable/item_edit_text_3"-->
                            <!--android:layout_height="50dp"-->
                            <!--android:layout_width="50dp"-->
                            <!--android:gravity="center"-->
                            <!--android:textSize="17dp"-->
                            <!--android:hint="선택" />-->

                        <Spinner
                            android:id="@+id/produce_create_page_3_select_end_date"
                            android:background="@drawable/item_edit_text_3"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:paddingLeft="13dp"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:hint="선택" />

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="15dp"
                            android:text="주 후"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/produce_create_page_3_end_date_info"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="15dp"
                            android:text="00일에 종료됩니다."
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!-- 프로젝트 종료일 끝 -->


            <!--todo: 뒤로가기 & 다음 페이지-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:background="@color/gray3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_button_3_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="뒤로"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/create_button_3_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="다 음"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
            <!--뒤로가기 & 다음 페이지 끝-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>