<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_marginTop="10dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/item_home_p_thumb"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#9A000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_home_p_title_and_certi_day"
            android:layout_marginTop="8dp"
            android:text="챌린지 제목│인증 빈도수"
            android:textSize="22dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_home_p_category"
            android:text="카테고리"
            android:textSize="15dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_home_p_total_price"
            android:text="모인 금액"
            android:textSize="15dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_home_p_start_and_end_date"
            android:layout_marginBottom="8dp"
            android:text="(기간 00.00) ~ (기간 00.00)"
            android:textSize="14dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</FrameLayout>