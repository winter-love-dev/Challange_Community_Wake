<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".wake.Produce_create.Activity_Product_Create_4">

    <!--타이틀바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/produce_create_toolbar_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="챌린지 개설 (4/5)"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--todo: 스크롤 뷰 Linear 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- todo: 상단 제목 영역-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo_4"
                    app:civ_border_color="@color/bg_main"
                    app:civ_border_width="0.1dp" />

                <TextView
                    android:id="@+id/produce_create_intro_4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="00님의 챌린지\n(챌린지 제목)"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>
            <!--상단 제목 영역 끝-->

            <!-- todo: 인증 방식 선택-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="인증 방법 설정"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/item_edit_text_3"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_button_1_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="사진"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_button_1_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="거리측정"
                            android:textSize="18dp" />

                    </RadioGroup>

                    <RadioGroup
                        android:visibility="gone"
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_button_2_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="일반사진"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_button_2_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="사물 or 동작 감지"
                            android:textSize="18dp" />

                    </RadioGroup>

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/produce_create_page_4_select_detect"
                        android:background="@drawable/item_edit_text_3"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@color/black"
                        android:layout_height="50dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:hint="선택" />

                    <RadioGroup
                        android:visibility="gone"
                        android:id="@+id/radioGroup3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_button_3_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="카메라만"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_button_3_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="앨범 허용"
                            android:textSize="18dp" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
            <!-- 인증 방식 선택 끝-->


            <!-- todo: 챌린지 참가비 입력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="참가비"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="5dp"
                    android:text="이 챌린지의 참가비는"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/produce_create_page_4_input_price"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/item_edit_text_3"
                        android:gravity="center"
                        android:hint="입력"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:gravity="center"
                        android:text="만 원 입니다"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>
            <!-- todo: 챌린지 참가비 입력 끝-->


            <!-- todo: 챌린지 인증시간 설정-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="인증시간 설정"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/produce_create_page_4_auth_start_time"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:hint="00:00"
                        android:background="@drawable/item_edit_text_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:text=" ~ "
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/produce_create_page_4_auth_end_time"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:hint="00:00"
                        android:background="@drawable/item_edit_text_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginHorizontal="15dp"-->
                    <!--android:layout_marginBottom="15dp"-->
                    <!--android:text="00:00 ~ 00:00은 24시간 입니다."-->
                    <!--android:textSize="15dp" />-->

            </LinearLayout>
            <!-- 챌린지 인증시간 설정 끝-->

            <!--todo: 뒤로가기 & 다음 페이지-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@color/gray3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_button_4_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="뒤로"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/create_button_4_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="다 음"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
            <!--뒤로가기 & 다음 페이지 끝-->



        </LinearLayout>
        <!-- 스크롤 뷰 Linear 끝 -->

    </ScrollView>

</LinearLayout>