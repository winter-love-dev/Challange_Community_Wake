<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:text="신고 처분 방법 선택"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--일 주일, 한 달 이용 선택-->
        <RadioGroup
            android:id="@+id/complain_dispose_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/complain_dispose_radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="부정 신고처분 \n(신고한 유저에게 신고 권한 박탈)"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/complain_dispose_radio_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="정상 신고처분\n(신고 접수된 유저의 해당 챌린지 참가 권한 박탈)"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/complain_dispose_radio_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="문제 없음"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

        </RadioGroup>

    </LinearLayout>


    <TextView
        android:id="@+id/dialog_dispose_done_button"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item_background_corner_main_color"
        android:gravity="center"
        android:padding="15dp"
        android:text="처분 완료"
        android:textColor="@color/white"
        android:textSize="17dp" />

</LinearLayout>