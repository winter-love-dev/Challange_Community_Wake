<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Produce_create.Activity_Product_Create_5">

    <!--타이틀바-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/produce_create_toolbar_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="챌린지 개설 (5/5)"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--todo: 스크롤 뷰 Linear 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- todo: 썸네일 선택, 챌린지 제목 확인, 챌린지 기간 확인-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="챌린지 썸네일 선택"
                    android:textSize="20dp" />

                <FrameLayout
                    android:id="@+id/thumb_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/produce_create_page_5_photo_area"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="#4D000000"
                        android:padding="20dp"
                        android:src="@drawable/logo_4" />

                    <ImageView
                        android:id="@+id/produce_create_page_5_photo_select"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4D000000"
                        android:padding="130dp"
                        android:src="@drawable/ic_add_icon_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:background="#87000000"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/produce_create_page_5_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="챌린지 제목"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/produce_create_page_5_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="챌린지 진행 기간"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- todo: 카테고리, 경험치 선택-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/category_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/item_background_corner_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:text="카테고리 선택 :"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/produce_create_page_5_category"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:hint="선택"
                        android:background="@drawable/item_edit_text_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_marginBottom="15dp"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<TextView-->
                        <!--android:layout_weight="1"-->
                        <!--android:gravity="right|center_vertical"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginHorizontal="10dp"-->
                        <!--android:text="획득 경험치 :"-->
                        <!--android:textSize="20dp" />-->

                <!--</LinearLayout>-->



            </LinearLayout>


            <!--todo: 뒤로가기 & 다음 페이지-->
            <LinearLayout
                android:id="@+id/done_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@color/gray3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/produce_create_page_5_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="뒤로"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/produce_create_page_5_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_background_corner_main_color"
                    android:text="등록하기"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
            <!--뒤로가기 & 다음 페이지 끝-->
        </LinearLayout>
        <!-- 스크롤 뷰 Linear 끝 -->
    </ScrollView>
</LinearLayout>