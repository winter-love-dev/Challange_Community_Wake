<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/dialog_distance_measurement_start_notice_background"
        android:src="@drawable/logo_1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:background="#79000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_distance_measurement_start_notice_title"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="목적지 선택함"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dialog_distance_measurement_start_notice"
            android:layout_weight="1"
            android:gravity="top|center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="목적지에 도착하면 인증이 종료됩니다"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<Button-->
                <!--android:id="@+id/button_dialog_reselect"-->
                <!--android:layout_marginHorizontal="7dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:text="위치 재지정" />-->

            <TextView
                android:id="@+id/button_dialog_placeInfo"
                android:background="@color/bg_main"
                android:gravity="center"
                android:padding="13dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:text="시작하기" />

            <!--<Button-->
                <!--android:layout_marginHorizontal="7dp"-->
                <!--android:id="@+id/button_dialog_placeInfo"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:text="시작하기" />-->

        </LinearLayout>

    </LinearLayout>

</FrameLayout>