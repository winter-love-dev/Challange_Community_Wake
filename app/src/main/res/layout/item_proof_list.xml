<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/white"
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:text="인증할 챌린지"
                android:paddingHorizontal="10dp"
                android:textSize="10dp"
                android:textColor="@color/bg_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/proof_list_title"
                android:text="제목"
                android:paddingHorizontal="10dp"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="진행 기간"
                android:paddingHorizontal="10dp"
                android:textSize="10dp"
                android:textColor="@color/bg_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/proof_list_day"
                android:text="진행기간"
                android:paddingHorizontal="10dp"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="인증 제한시간"
                android:paddingHorizontal="10dp"
                android:textSize="10dp"
                android:textColor="@color/bg_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/proof_list_time"
                android:text="인증할 시간"
                android:paddingHorizontal="10dp"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="인증시 획득할 금액"
                android:paddingHorizontal="10dp"
                android:textSize="10dp"
                android:textColor="@color/bg_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/proof_list_reword"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                android:text="인증시 획득할 금액"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/proof_list_thumb"
                android:scaleType="centerCrop"
                android:layout_width="140dp"
                android:src="@drawable/logo_5"
                android:layout_height="140dp" />

            <ImageView
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camera"
                android:background="#36000000"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/proof_list_proof_permission"
        android:text="부정 행위로 인해\n\n인증 권한 없음"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#9FFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>