<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/item_background_corner_white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:text="인증샷을 신고합니다"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--일 주일, 한 달 이용 선택-->
        <RadioGroup
            android:id="@+id/complain_dialog_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/complain_dialog_radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="해당 인증샷만 신고합니다"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/complain_dialog_radio_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해당 유저가 찍은 다른 인증샷을 같이 봐주세요"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/complain_done_button"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="신고하기"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/item_background_corner_main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
